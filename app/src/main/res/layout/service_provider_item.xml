<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/spCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/misty_blue" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/spImage"
            style="@style/CornerCut"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
android:layout_gravity="center_horizontal"
            android:src="@drawable/sample_saloon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/spRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:text="4.5/5"
                android:textColor="@color/white"
                android:textFontWeight="900"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/spTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"

                android:text="Mr. Smiths Cleaners"
                android:textColor="@color/misty_blue_dark"
                android:textFontWeight="900"
                android:textSize="35sp"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
